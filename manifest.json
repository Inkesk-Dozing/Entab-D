{
  "manifest_version": 3,
  "name": "entab-D - Groups & Duplicates",
  "version": "1.0.0",
  "description": "Organize tabs into Study/Education/Research groups, detect and close duplicates. Fast, private, and secure.",
  "action": {
    "default_title": "entab-D",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "service_worker.js"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}